programa {
  funcao inicio() {

      inteiro anonas, ano, anoa

      escreva("Digite o ano de nascimento da pessoa: ")
      leia(anonas)

      escreva("Digite o ano atual: ")
      leia(ano)

      escreva("\nA idade da pessoa é de ", ano - anonas)

      escreva("\nA idade da pessoa em 2028 será ", (2028 - ano) + (ano - anonas))  
      }
}
