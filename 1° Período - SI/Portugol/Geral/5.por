programa {
  funcao inicio() {
    
    inteiro a, contp = 0, contz = 0

    faca{
      escreva("Digite um número: ")
      leia(a)

      se(a == 0){
        contz++
      }

      se(a > 0){
        contp++
      }
    }

    enquanto(a >= 0)

      escreva("\nValores positivos: ",contp)
      escreva("\nValores zerados: ",contz)
      escreva("\nValores negativos: 1")


  }
}
